<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMShopForms.View.Login">
    <ContentPage.Content>
        <StackLayout>
            <Image
                    HeightRequest="150"
                    Source="profile">
            </Image>
            <Label
                    Text="Usuario">
            </Label>
            <Entry
                    Keyboard="Default"
                    Placeholder="Usuario"
                   >
            </Entry>
            <Label
                    Text="Password">
            </Label>
            <Entry
                    IsPassword="True"
                    Placeholder="Password"
                 >
            </Entry>
            <Button
                        BackgroundColor="Navy"
                        BorderRadius="23"
                        HeightRequest="46"
                        HorizontalOptions="FillAndExpand"
                        Text="Login"
                        TextColor="White">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>